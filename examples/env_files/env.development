# Example .env file for development mode
# Copy this to .env in the project root

# LLM Provider
LLM_PROVIDER=vllm

# vLLM Configuration
VLLM_ENDPOINT=http://localhost:8000
VLLM_MODEL_NAME=Qwen/Qwen3-32B-FP8
VLLM_API_KEY=dummy_key

# General LLM Settings
LLM_TIMEOUT=1200
LLM_MAX_TOKENS=8000
LLM_TEMPERATURE=0.2

# Project Configuration
DEFAULT_OUTPUT_DIR=./output
DEFAULT_CPP_STANDARD=C++17
DEFAULT_MAX_TURNS=1
DEFAULT_TARGET_QUALITY=6.0
DEFAULT_INCLUDE_TESTS=true

# Analysis Configuration
MAX_FILE_SIZE=50000
CHUNK_SIZE=4000
ANALYSIS_PASSES=2
CONFIDENCE_THRESHOLD=0.6

# Conversion Configuration
INCLUDE_OPTIMIZATION=true
GENERATE_TESTS=true
CREATE_DOCUMENTATION=true

# Logging Configuration
LOG_LEVEL=DEBUG
ENABLE_CONSOLE_LOGGING=true
LOG_FILE=./logs/development.log

# Development Configuration
DEV_MODE=true
ENABLE_PROFILING=true
CACHE_DIR=./.cache
